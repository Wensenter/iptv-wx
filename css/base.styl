.wrap
    min-height 100vh
    font-size 0
    .ctx-body
        height calc(100vh - 1.2rem /* 120/100 */)
        overflow-y scroll
        .swiper-wrap 
            .swiper-container
                height 3.75rem /* 375/100 */
                .swiper-slide>img
                    width 100%
                    height 3.75rem /* 375/100 */
            .swiper-pagination
                height .46rem /* 46/100 */
                padding .18rem /* 18/100 */
                position relative
                display flex
                justify-content center
                align-items center
                .swiper-pagination-bullet
                    height .1rem /* 10/100 */
                    width .1rem /* 10/100 */
                    margin 0 7.5px 
                    border-radius 50%
        .main
            width 100%
            padding 0 .3rem /* 30/100 */
            .nav-tab-wrap
                padding-top .14rem /* 14/100 */
                padding-bottom .4rem /* 40/100 */
                .nav-tabs
                    display flex
                    align-items center
                    overflow-x scroll
                    .tab>a
                        display block
                        height 1.35rem /* 135/100 */
                        font-size .26rem /* 26/100 */
                        text-align center
                        text-decoration none
                        margin-right .625rem /* 62.5/100 */
                        i
                            width .88rem /* 88/100 */
                            height .88rem /* 88/100 */
                            display block
                        .film
                            background url('../img/icon/film-icon.png')
                            background-size .88rem /* 88/100 */.88rem /* 88/100 */
    .ctx-footer
        height 1.2rem /* 120/100 */